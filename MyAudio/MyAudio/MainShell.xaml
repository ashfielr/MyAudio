<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyAudio.MainShell"
             xmlns:views="clr-namespace:MyAudio.Views">
    <TabBar>
        <ShellContent   Title="AudioFiles"
                        Icon="AudioFilesIcon.png"   
                        Shell.NavBarIsVisible="false"
                        ContentTemplate="{DataTemplate views:AudioFilesPage}" />
        <ShellContent   Title="Playlists"
                        Icon="PlaylistsIcon.png"
                        Shell.NavBarIsVisible="false"
                        ContentTemplate="{DataTemplate views:PlaylistsPage}" />
    </TabBar>
</Shell>