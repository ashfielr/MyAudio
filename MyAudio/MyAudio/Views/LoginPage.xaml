<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyAudio.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to MyAudio!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label Text="Email" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
            <Entry Text="{Binding Email, Mode=TwoWay}" />
            <Label Text="Password" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
            <Entry Text="{Binding Password, Mode=TwoWay}" IsPassword="True" />
            <Button Text="Login" Style="{StaticResource CommonButtonStyle}" Command="{Binding LogInCommand}" />
            <Label Text="Don't have an account? Sign up now..." />
            <Button Text="Go to Sign Up Page" Style="{StaticResource CommonButtonStyle}" Command="{Binding GoToSignUpPageCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>