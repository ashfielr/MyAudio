<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyAudio.Views.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <StackLayout Orientation="Horizontal">
                <Label Text="Audio Files" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
                <Button Text="Upload" HorizontalOptions="EndAndExpand"/>
            </StackLayout>
        </Frame>

        <Grid Padding="5,5,5,5" MinimumHeightRequest="50" BackgroundColor="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Source="" BackgroundColor="Gray" WidthRequest="70" HeightRequest="70"/>
            <StackLayout Grid.Column="1" VerticalOptions="CenterAndExpand" Margin="5,0,0,0">
                <Label Text="Audio Title Goes Here" />
                <Label Text="Artist Name Here" />
            </StackLayout>
            <Label Grid.Column="2" Text="00:00" VerticalOptions="CenterAndExpand"/>
        </Grid>

    </StackLayout>

</ContentPage>
